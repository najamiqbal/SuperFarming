<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:id="@+id/forgetpass_resettimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Timer"
        android:textColor="@color/link_blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/enter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forgetpass_resettimer"
        android:layout_marginTop="10dp"
        android:text="Enter Verification code"
        android:textColor="@color/link_blue"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/forgetpass_firebaseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enter_title"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Verification Code"
        android:inputType="number"
        android:textColorHint="@color/colorPrimary"/>

    <Button
        android:id="@+id/forgetpass_btn_verify"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetpass_firebaseCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:text="Verify"
        android:textColor="#FFF"/>
</RelativeLayout>
